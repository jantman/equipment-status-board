# ESB Environment Configuration
# Copy this file to .env and update values as needed.

# Flask secret key (change in production!)
SECRET_KEY=dev-secret-change-me

# Database connection URL
DATABASE_URL=mysql+pymysql://root:esb_dev_password@localhost/esb

# MariaDB root password (used by docker-compose)
MARIADB_ROOT_PASSWORD=esb_dev_password

# File upload configuration
UPLOAD_PATH=uploads
UPLOAD_MAX_SIZE_MB=500

# Slack integration (optional, leave empty to disable)
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Static page push configuration
# Method: 'local' (copy to local path), 's3' (upload to S3 bucket via boto3), or 'gcs' (upload to Google Cloud Storage bucket)
STATIC_PAGE_PUSH_METHOD=local
STATIC_PAGE_PUSH_TARGET=

# Google Cloud credentials (only needed if STATIC_PAGE_PUSH_METHOD=gcs and not using instance metadata/Workload Identity)
# GOOGLE_APPLICATION_CREDENTIALS=

# Flask configuration
FLASK_APP=esb:create_app
FLASK_DEBUG=1
